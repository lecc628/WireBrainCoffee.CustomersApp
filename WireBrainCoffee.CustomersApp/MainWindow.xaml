<Window x:Class="WireBrainCoffee.CustomersApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WireBrainCoffee.CustomersApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="20"
        d:DesignWidth="320" d:DesignHeight="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="btnAddCustomer"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="10" Width="75" Click="ButtonAddCustomer_Click"
                Grid.Row="0">
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/add.png" Height="18" Margin="0 0 5 0"/>
                    <TextBlock Text="Add"/>
                </StackPanel>
            </Button.Content>
        </Button>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="1">
            <Rectangle Margin="10 10 5 10" Fill="Blue" Width="80"/>
            <Rectangle Margin="5 10 10 10" Fill="Green" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
